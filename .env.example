# SentinelStream Environment Configuration
# Copy this to .env and customize

# Broker Mode: 'local' or 'cloud'
BROKER_MODE=local

# Local Redpanda (default)
LOCAL_BOOTSTRAP_SERVERS=localhost:19092

# Cloud (Upstash Kafka) - uncomment and fill for cloud mode
# CLOUD_BOOTSTRAP_SERVERS=your-cluster.upstash.io:9092
# CLOUD_SASL_USERNAME=your-username
# CLOUD_SASL_PASSWORD=your-password

# Topic
TOPIC_NAME=transaction-stream

# Rate Limiting (transactions per second, 0 = unlimited)
RATE_LIMIT=10

# Data Source
CSV_PATH=creditcard.csv
